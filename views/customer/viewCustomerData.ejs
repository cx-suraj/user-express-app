<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2"><%= customerData.firstName %> <%= customerData.lastName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary" onClick="history.back()">
        Back
      </button>
    </div>
  </div>
</div>
<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= customerData.firstName %> <%= customerData.lastName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(customerData.updateAt).toUTCString() %></b>
      <b> User ID: <%= customerData._id %></b>
    </div>
  </div>
</div>

<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Name :</b></div>
      <div class="col">
        <%= customerData.firstName %> <%= customerData.lastName %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Mobile Number :</b></div>
      <div class="col"><%= customerData.tel %></div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Email ID :</b></div>
      <div class="col"><%= customerData.email %></div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Address :</b></div>
      <div class="col"><%= customerData.details %></div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date Create :</b></div>
      <div class="col"><%= new Date(customerData.createAt) %></div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date Update :</b></div>
      <div class="col"><%= new Date(customerData.updateAt) %></div>
    </div>
  </li>
</ul>
